source 'https://rubygems.org'

ruby "2.2.2"

gem 'rails', '~>4.2.1'

gem "choices"
gem "oauth2"
gem "oauth"
gem "haml"
gem "thin"
gem 'jquery-rails', '2.0.1'
gem "pg"
gem "rails_12factor"

# Gems used only for assets and not required
# in production environments by default.
group :assets do
  gem 'sass-rails', '>= 3.2.3'
  gem 'uglifier', '>= 1.0.3'
end

group :development do
  gem "factory_girl"
  gem "rspec"
  gem "rspec-rails"
  gem "simplecov"
  gem "pry"
  gem 'test-unit'
end
group :production do
  gem 'rails_serve_static_assets'
end
